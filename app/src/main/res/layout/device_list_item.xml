<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.og.privatemessenger.view_model.BluetoothDeviceViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.onClick()}">

        <TextView
            android:id="@+id/device_name_text_view"
            style="@style/Theme.PrivateMessenger.BluetoothDeviceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.deviceName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/connect_and_chat_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/connect_and_chat_button"
            style="@style/Theme.PrivateMessenger.ImageButton"
            android:contentDescription="@string/connect_and_chat"
            android:src="@{viewModel.isConnected ? @drawable/connect_and_chat_green : @drawable/connect_and_chat_blue}"
            android:visibility="@{viewModel.isLoading() ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            style="@style/Theme.PrivateMessenger.CircularIndicator"
            android:visibility="@{viewModel.isLoading() ?  View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/connect_and_chat_button"
            app:layout_constraintEnd_toEndOf="@id/connect_and_chat_button"
            app:layout_constraintStart_toStartOf="@id/connect_and_chat_button"
            app:layout_constraintTop_toTopOf="@id/connect_and_chat_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>